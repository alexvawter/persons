            <persName>Jesus of Nazareth</persName>
          </person>
          <person xml:id="Augustus">
            <persName notAfter="-0044-03-15">Gaius Octavius</persName>
            <persName notBefore="-0044-03-15" notAfter="-0027-01-16">Caesar</persName>
            <persName notBefore="-0027-01-16">Augustus</persName>
          </person>
          <person xml:id="Bardaisan">
            <persName ref="MADS record #0003">Bardaisan</persName>
          </person>
